<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `${hike.name} | My Hikes`}) %>
    <link rel="stylesheet" href="/styles/hike-details.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div>
        <img src="/<%= hike.routePic %>">
        <h2 class="hike-name"><%= hike.name %></h2>
        <section>
            <p><strong>Miles:</strong> <%= hike.miles %></p>
            <p><strong>Elevation Gain:</strong> <%= hike.elevationGain %> feet</p>
            <p><strong>Description:</strong> <%= hike.description %></p>
            
            <p><strong>City:</strong> <%= hike.city %></p>
            <p><strong>State:</strong> <%= hike.state %></p>
            <img src="/<%= hike.inclinePic %>">
            <p><strong>Additional Info:</strong> <%= hike.additionalInfo %></p>
        </section>
        <section class="actions">
            <button class="btn"><a href="/hikes/<%= hike._id %>/edit">Edit</a></button>

            <form method="POST" action="/hikes/<%= hike._id %>?_method=DELETE">
                <input class="btn" type="submit" value="Delete" />
            </form>

            
            
        <!-------- Gear BUTTON IN PROGRESS ----------->
            <button class="btn"><a href="/gears/new/<%= hike._id %>">Add A Gearlist</a></button>
            
        </section>
        
    </div>
    <% if (hike.gears.length > 0) { %>
        <div class="gears" open>
            <h1>Gear List</h1>
            <hr>
            <ul>
                <% for (let gear of hike.gears) { %>
                
            <li>    <p>Parking Pass: <%= gear.parkingPass %></p></li>
            <li>    <p>Ten Essentials: <%= gear.tenEssentials %></p></li>
            <li>    <p>Bear Cannister: <%= gear.bearCannister %></p></li>
            <li>    <p>Bear Spray: <%= gear.bearSpray %></p></li>
            <li>    <p>Additional Notes: <%= gear.notes %></p></li>
            <form method="POST" action="/gears/<%= gear._id %>?_method=DELETE">
                <input class="btn" type="submit" value="Delete" />
            </form>       
                
                <% } %>
            </ul>
            
        </div>
        <% } %>
        

   
</body>

</html>